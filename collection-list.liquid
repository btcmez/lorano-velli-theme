{% comment %}
  This section displays a list of collections on the homepage.
{% endcomment %}
<section class="collection-list">
  <div class="container">
    <div class="row">
      {% for collection in collections %}
        <div class="col-md-4">
          <div class="collection-card">
            <a href="{{ collection.url }}">
              {% if collection.image %}
                <img src="{{ collection.image.src | img_url: 'medium' }}" alt="{{ collection.title }}" class="collection-image">
              {% else %}
                <img src="https://via.placeholder.com/300x300" alt="{{ collection.title }}" class="collection-image">
              {% endif %}
              <h3 class="collection-title">{{ collection.title }}</h3>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
.collection-list {
  margin: 40px 0;
}

.collection-card {
  border: 1px solid #ddd;
  padding: 10px;
  text-align: center;
  margin-bottom: 30px;
}

.collection-image {
  width: 100%;
  height: auto;
  max-width: 300px;
  margin-bottom: 15px;
}

.collection-title {
  font-size: 18px;
  font-weight: bold;
  color: #323B60;
  margin: 0;
}
{% endstylesheet %}
